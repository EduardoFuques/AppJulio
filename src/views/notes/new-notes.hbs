<div class="col-md mx-auto">
    <div class="card">
    <div class="card-header">
        <H3>Agregar nueva nota</H3>
    </div>
    <div class="card-body mt-2 text-white rounded">
        <form action="/notes/new-note" method="POST">
        <div class="form-group mt-4">
            <input type="text" name="title" class="form-control" placeholder="Titulo" autofocus>
        </div>
        </form>
        <div class="form-group mt-4">
            <textarea name="description" class="form-control" placeholder="Descripcion"></textarea>
        </div>
        <div class="form-group mt-4">
            <button class="btn btn-primary btn-block" type="submit">
                Guardar
            </button>
        </div>
    </div>
</div>
</div>