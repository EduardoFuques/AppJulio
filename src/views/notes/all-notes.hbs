<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card mb-4">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                </h4>
                <p>{{description}}</p>
                <div class="form-group mb-2">
                    <div class="d-grid">
                        <button class="btn btn-danger btn-sm" type="button">Borrar</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
    {{else}}
    <div class="form-group">
        <div class="d-grid">
            <div class="card mx-auto ">
                <div class="card-body">
                    <p class="lead">No hay notas a√∫n</p>
                    <a href="/notes/add" class="btn btn-success btn-block">Crear una nueva nota</a>
                </div>
            </div>
        </div>
    </div>

    {{/each}}
</div>